@using WeddingVeneus1.Areas.Booking.Models;
@model CancelModel;
@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<div class="pagetitle">
    <h1>Form Layouts</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item">Forms</li>
            <li class="breadcrumb-item active">Layouts</li>
        </ol>
    </nav>
</div><!-- End Page Title -->
<div class="col-lg-6">

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Cancel Booking</h5>
            <span>As per Venue Cancellation Policy @Model.CancellationPolicy percent of total amount will be deducted if the request is approved. </span>
            <!-- Horizontal Form -->
            <form asp-area="Booking" asp-controller="Booking" asp-action="CancellationPolicy" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                

                
                <div class="row mb-3">
                    <input asp-for="UserID" hidden />
                    <input asp-for="BookingID" hidden />
                    <input asp-for="VenueID" hidden />

                    <label asp-for="VenueName" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input type="text" asp-for="VenueName" class="form-control" id="inputText" readonly>
                    </div>
                    <span asp-validation-for="VenueName" class="text-danger"></span>
                </div>
               
                
                
                
                @* <h1>@Model.AdvancePayment</h1>
                <h1>@Model.PaymentAfterEvent</h1> *@


                <div class="row mb-3">


                    <label asp-for="BookingStartDate" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input type="text" asp-for="BookingStartDate" class="form-control" id="inputStartDate" readonly />

                    </div>
                    <span class="text-danger" asp-validation-for="BookingStartDate"></span>
                </div>
                <div class="row mb-3">


                    <label asp-for="BookingEndDate" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input type="text" asp-for="BookingEndDate" class="form-control" id="inputEndDate" readonly />
                    </div>
                    <span class="text-danger" asp-validation-for="BookingEndDate"></span>
                </div>
                <div class="row mb-3">


                    <label asp-for="NumOfDays" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input type="text" asp-for="NumOfDays" class="form-control" id="inputEndDate"  />
                    </div>
                    <span class="text-danger" asp-validation-for="NumOfDays"></span>
                </div>
                <div class="row mb-3">


                    <label asp-for="Reason" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input type="text" asp-for="Reason" class="form-control" id="inputEndDate"  />
                    </div>
                    <span class="text-danger" asp-validation-for="Reason"></span>
                </div>
                


                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Request Cancel</button>
                    
                </div>
            </form><!-- End Horizontal Form -->

        </div>
    </div>
