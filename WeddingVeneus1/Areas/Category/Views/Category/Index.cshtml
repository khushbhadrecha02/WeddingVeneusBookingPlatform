@using System.Data
@using WeddingVeneus1.Areas.Category.Models
@model MST_Category_ViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="pagetitle">
    <h1>Venue Category</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item">Tables</li>
            <li class="breadcrumb-item active">Data</li>
        </ol>
    </nav>
</div><!-- End Page Title -->
<section class="section">
    <div class="row">
        <div class="col-lg-6">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Horizontal Form</h5>

                    <!-- Horizontal Form -->
                    <form asp-area="Category" asp-controller="Category" asp-action="_Search" >
                        <div class="row mb-3">
                            
                            <label asp-for="@Model.SearchModel.CategoryName" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input type="text" asp-for="@Model.SearchModel.CategoryName" class="form-control" id="inputText">
                            </div>
                            <span asp-validation-for="@Model.SearchModel.CategoryName" class="text-danger"></span>
                        </div>
                        



                        <div class="text-center">
                            <button type="submit" value="search" name="submit" class="btn btn-primary">Submit</button>
                            <button type="submit" value="list" name="submit" class="btn btn-secondary">Reset</button>
                        </div>
                    </form><!-- End Horizontal Form -->

                </div>
            </div>
        </div>
    </div>
</section>
<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    
                    <h1 class="card-header text-primary"><strong>Venue Categories List</strong></h1>
                    <div class="d-flex align-items-center">
                        @if (ViewBag.ISConfirmed == false)
                        {
                            <div class="d-flex">
                                <button id="approveCategoryButton" class="btn btn-success">Approve</button>
                                <button id="rejectCategoryBtn" class="btn btn-danger ms-2">Reject</button>
                            </div>
                        }

                        <div class="ms-auto">
                            <a href="@Url.Action("Create", "Category", new { area = "Category" })" class="btn shadow border btn-success">
                                <i class="bi bi-plus-circle"></i> Add New Category
                            </a>
                        </div>
                    </div>

                    <!-- Table with stripped rows -->
                    <table class="table datatable">
                        <thead>
                            <tr>
                                @if (ViewBag.ISConfirmed == false)
                                {

                                    <th scope="col"><input type="checkbox" id="selectAllCheckboxes"></th>
                                }
                                <th scope="col">CategoryPhoto</th>
                                <th scope="col">CategoryName</th>
                                 <th scope="col">Created</th>
                                <th scope="col">Modified</th>
                                @if (ViewBag.ISConfirmed == true)
                                {
                                    <th scope="col"></th>
                                }

                            </tr>
                        </thead>
                        <tbody>


                            @foreach (DataRow dr in Model.CategoryDataTable.Rows)
                            {
                                <tr>
                                    @if (ViewBag.ISConfirmed == false)
                                    {
                                        <th> <input type="checkbox" class="form-check-input row-checkbox" name="categoryIds" value="@dr["CategoryID"]"></th>
                                    }
                                    
                                    <td><img src="@Url.Content(Convert.ToString(dr["CategoryPhoto"]))" class="my-3" alt="Profile" height="50"  width="50"></td>
                                    <td>@dr["CategoryName"]</td>
                                     

                                    <td>@Convert.ToDateTime(dr["Created"]).ToString("dd-MM-yy")</td>
                                    <td>@Convert.ToDateTime(dr["Modified"]).ToString("dd-MM-yy")</td>

                                    <td>
                                        <div>

                                            

                                            @if (ViewBag.ISConfirmed == true)
                                            {
                                                <a asp-area="Category" asp-controller="Category" asp-action="Delete" asp-route-CategoryID="@dr["CategoryID"]" class="btn btn-danger mx-2" onclick="fun1()">
                                                    <i class="bi bi-trash-fill"></i>
                                                </a>
                                                <a asp-area="Category" asp-controller="Category" asp-action="Create" asp-route-CategoryID="@dr["CategoryID"]" class="btn btn-primary mx-2">
                                                    <i class="bi bi-pencil-square"></i>
                                                </a>
                                            }
                                            


                                        </div>
                                    </td>
                                    
                                </tr>

                            }
                        </tbody>
                        </table>
                        </div>
                        </div>
                        </div>
                        </div>
                        </section>



