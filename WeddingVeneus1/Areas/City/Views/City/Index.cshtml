@using System.Data
@using WeddingVeneus1.Areas.City.Models
@model MST_City_ViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="pagetitle">
    <h1>City</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item">Tables</li>
            <li class="breadcrumb-item active">Data</li>
        </ol>
    </nav>
</div><!-- End Page Title -->
<section class="section">
    <div class="row">
        <div class="col-lg-6">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Horizontal Form</h5>

                    <!-- Horizontal Form -->
                    <form asp-area="City" asp-controller="City" asp-action="_Search" enctype="multipart/form-data">
                        <div class="row mb-3">

                            <label class="ms-2">State Name</label>
                            <div class="col-sm-10">
                                <select class="form-select" asp-for="@Model.SearchModel.StateID" asp-items="@(new SelectList(ViewBag.StateList,"StateID","StateName"))">

                                    <option value="">Select State</option>
                                </select>
                                <span asp-validation-for="@Model.SearchModel.StateID" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="row mb-3">

                            <label asp-for="@Model.SearchModel.CityName" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input type="text" asp-for="@Model.SearchModel.CityName" class="form-control" id="inputText">
                            </div>
                            <span asp-validation-for="@Model.SearchModel.CityName" class="text-danger"></span>
                        </div>




                        <div class="text-center">
                            <button type="submit" value="search" name="submit" class="btn btn-primary">Submit</button>
                            <button type="submit" value="list" name="submit" class="btn btn-secondary">Reset</button>
                        </div>
                    </form><!-- End Horizontal Form -->

                </div>
            </div>
        </div>
    </div>
</section>
<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h1 class="card-header text-primary"><strong>City List</strong></h1>
                    <div class="d-flex align-items-center">
                        @if (ViewBag.ISConfirmed == false)
                        {
                            <div class="d-flex">
                                <button id="approveCityButton" class="btn btn-success">Approve</button>
                                <button id="rejectCityBtn" class="btn btn-danger ms-2">Reject</button>
                            </div>
                        }

                        <div class="ms-auto">
                            <a href="@Url.Action("Create", "City", new { area = "City" })" class="btn shadow border btn-success">
                                <i class="bi bi-plus-circle"></i> Add New City
                            </a>
                        </div>
                    </div>
                    <!-- Table with stripped rows -->
                    <table class="table datatable">
                        <thead>
                            <tr>
                                @if (ViewBag.ISConfirmed == false)
                                {

                                    <th scope="col"><input type="checkbox" id="selectAllCheckboxes"></th>
                                }
                                <th scope="col">CityID</th>
                                <th scope="col">CityName</th>
                                <th scope="col">StateName</th>
                                <th scope="col">CityPhoto</th>
                                <th scope="col">Created</th>
                                <th scope="col">Modified</th>
                                @if (ViewBag.ISConfirmed == true)
                                {
                                    <th scope="col"></th>
                                }



                            </tr>
                        </thead>
                        <tbody>
                            @foreach (DataRow dr in Model.CityDataTable.Rows)
                            {
                                <tr>
                                    @if (ViewBag.ISConfirmed == false)
                                    {
                                        <th> <input type="checkbox" class="form-check-input row-checkbox" name="cityIds" value="@dr["CityID"]"></th>
                                    }
                                    <th scope="row">@dr["CityID"]</th>
                                    <td>@dr["CityName"]</td>
                                    <td>@dr["StateName"]</td>
                                    <td><img src="@Url.Content(Convert.ToString(dr["PhotoPath"]))" class="my-3" alt="Profile" height="100"  width="100"></td>

                                    <td>@Convert.ToDateTime(dr["Created"]).ToString("dd-MM-yy")</td>
                                    <td>@Convert.ToDateTime(dr["Modified"]).ToString("dd-MM-yy")</td>

                                    <td>
                                        <div>
                                            @if (ViewBag.ISConfirmed == true)
                                            {
                                                <a asp-area="City" asp-controller="City" asp-action="Delete" asp-route-CityID="@dr["CityID"]" class="btn btn-danger mx-2" onclick="fun1()">
                                                    <i class="bi bi-trash-fill"></i>
                                                </a>
                                                <a asp-area="City" asp-controller="City" asp-action="Create" asp-route-CityID="@dr["CityID"]" class="btn btn-primary mx-2">
                                                    <i class="bi bi-pencil-square"></i>
                                                </a>
                                            }




                                        </div>
                                    </td>

                                </tr>



                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts
    {
    <script>

        function fun1() {
            if (confirm("Are you sure you want to delete?")) {
                return true;
            }
            else {
                return false;
            }
        }
        var ApproveButton = "#approveCityButton";
        var inputName = "cityIds";
        var ExpectedParameter = "cityIDs";
        var url = '@Url.Action("ApproveCityStatus", "City")';
        var url1 = '@Url.Action("RejectCity", "City")';

        var selectAllCheckboxes = '#selectAllCheckboxes';
        var ConfirmationMessage = "Are you sure you want to approve the selected cities?";
        var DeleteButton = "#rejectCityBtn";
    </script>
                        }
