@using WeddingVeneus1.Areas.State.Models;
@using System.Data;
@model MST_State_ViewModel;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
  <div class="pagetitle">
    <h1>State</h1>
    <nav>


           <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
        <li class="breadcrumb-item">Tables</li>
        <li class="breadcrumb-item active">Data</li>
        </ol> 
    </nav>
</div><!-- End Page Title -->
<section class="section">
    <div class="row">
        <div class="col-lg-6">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Horizontal Form</h5>

                    <!-- Horizontal Form -->
                    <form asp-area="State" asp-controller="State" asp-action="_Search">
                        <div class="row mb-3">
                            
                            <label asp-for="@Model.SearchModel.StateName" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input type="text" asp-for="@Model.SearchModel.StateName" class="form-control" id="inputText">
                            </div>
                            <span asp-validation-for="@Model.SearchModel.StateName" class="text-danger"></span>
                        </div>



                        <div class="text-center">
                            <button type="submit" value="search" name="submit" class="btn btn-primary">Submit</button>
                            <button type="submit" value="list" name="submit" class="btn btn-secondary">Reset</button>
                        </div>
                    </form><!-- End Horizontal Form -->

                </div>
            </div>
        </div>
    </div>
</section>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-header text-primary"><strong>State List</strong></h1>
                    <div class="row card-header">
                        <div class="col-9"><p class="card-header col-6 fs-2 fs-sm-5"></p></div>
                        <div class="col-3 justify-content-end text-end">
                            <a asp-area="State" asp-controller="State" asp-action="Create" class="btn shadow border btn-success col-9">
                                <i class="bi bi-plus-circle"></i>   Add New State
                            </a>
                        </div>
                    </div>

                    
                    
                    
                    
                    
                    <!-- Table with stripped rows -->
                    <table class="table datatable">
                        <thead>
                            <tr>
                                <th scope="col">StateID</th>
                                <th scope="col">StateName</th>
                                <th scope="col">Created</th>
                                <th scope="col">Modified</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (DataRow dr in Model.StateDataTable.Rows)
                            {
                                <tr>
                                    <th scope="row">@dr["StateID"]</th>
                                    <td>@dr["StateName"]</td>
                                    <td>@Convert.ToDateTime(dr["Created"]).ToString("dd-MM-yy")</td>
                                    <td>@Convert.ToDateTime(dr["Modified"]).ToString("dd-MM-yy")</td>
                                    <td>
                                        
                                            <a asp-area="State" asp-controller="State" asp-action="Delete" asp-route-StateID="@dr["StateID"]" class="btn btn-danger mx-2" onclick="fun1()">
                                                <i class="bi bi-trash-fill"></i>
                                            </a>
                                         @if(ViewBag.ISConfirmed == false)
                                        {
                                            <a asp-area="State" asp-controller="State" asp-action="ApproveStateStatus" asp-route-StateID="@dr["StateID"]" class="btn btn-primary mx-2">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            
                                            <a asp-area="State" asp-controller="State" asp-action="Create" asp-route-StateID="@dr["StateID"]" class="btn btn-primary mx-2">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                        }
                                        
                                        
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts
{
    <script>
        $(document).ready(function () {
            $("#Sample_1").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#Sample_2 tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                });
            });
        });
        function fun1() {
            if (confirm("Are you sure you want to delete?")) {
                return true;
            }
            else {
                return false;
            }
        }
    </script>
}
