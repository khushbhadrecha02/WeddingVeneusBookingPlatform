@using WeddingVeneus1.Areas.State.Models;
@using System.Data;
@model MST_State_ViewModel;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
  <div class="pagetitle">
    <h1>State</h1>
    <nav>


           <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
        <li class="breadcrumb-item">Tables</li>
        <li class="breadcrumb-item active">Data</li> 
        </ol> 
    </nav>
</div><!-- End Page Title -->
<section class="section">
    <div class="row">
        <div class="col-lg-6">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Horizontal Form</h5>

                    <!-- Horizontal Form -->
                    <form asp-area="State" asp-controller="State" asp-action="_Search">
                        <div class="row mb-3">
                            
                            <label asp-for="@Model.SearchModel.StateName" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input type="text" asp-for="@Model.SearchModel.StateName" class="form-control" id="inputText">
                            </div>
                            <span asp-validation-for="@Model.SearchModel.StateName" class="text-danger"></span>
                        </div>



                        <div class="text-center">
                            <button type="submit" value="search" name="submit" class="btn btn-primary">Submit</button>
                            <button type="submit" value="list" name="submit" class="btn btn-secondary">Reset</button>
                        </div>
                    </form><!-- End Horizontal Form -->

                </div>
            </div>
        </div>
    </div>
</section>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-header text-primary"><strong>State List</strong></h1>

                    <div class="d-flex align-items-center">
                        @if(ViewBag.ISConfirmed == false)
                        {
                            <div class="d-flex">
                                <button id="approveStatesButton" class="btn btn-success">Approve</button>
                                <button id="rejectStateBtn" class="btn btn-danger ms-2">Reject</button>
                            </div>
                        }
                        
                        <div class="ms-auto">
                            <a href="@Url.Action("Create", "State", new { area = "State" })" class="btn shadow border btn-success">
                                <i class="bi bi-plus-circle"></i> Add New State
                            </a>
                        </div>
                    </div>


                    
                    
                    
                    
                    
                    <!-- Table with stripped rows -->
                    <table class="table datatable">
                        <thead>
                            <tr>
                                @if (ViewBag.ISConfirmed == false)
                                {
                                    
                                    <th scope="col"><input type="checkbox" id="selectAllCheckboxes" ></th>
                                }
                                
                                <th scope="col">StateID</th>
                                <th scope="col">StateName</th>
                                <th scope="col">Created</th>
                                <th scope="col">Modified</th>
                                <th scope="col"></th>
                                     <!-- Adjust the style as needed -->
                                
                            </tr>
                        </thead>
                        <tbody>
                            <form id="stateApprovalForm" >

                            @foreach (DataRow dr in Model.StateDataTable.Rows)
                            {
                                <tr>
                                    @if(ViewBag.ISConfirmed == false)
                                    {
                                       <th> <input type="checkbox" class="form-check-input row-checkbox" name="stateIds" value="@dr["StateID"]"></th>
                                    }
                                    

                                    <th scope="row">@dr["StateID"]</th>
                                    <td>@dr["StateName"]</td>
                                    <td>@Convert.ToDateTime(dr["Created"]).ToString("dd-MM-yy")</td>
                                    <td>@Convert.ToDateTime(dr["Modified"]).ToString("dd-MM-yy")</td>
                                    <td>
                                        
                                            
                                         @if(ViewBag.ISConfirmed == true)
                                        {

                                            <a asp-area="State" asp-controller="State" asp-action="Create" asp-route-StateID="@dr["StateID"]" class="btn btn-primary mx-2">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <a asp-area="State" asp-controller="State" asp-action="Delete" asp-route-StateID="@dr["StateID"]" class="btn btn-danger mx-2 state-action-button" onclick="fun1()">
                                                <i class="bi bi-trash-fill"></i>
                                            </a>

                                            
                                            

                                        }
                                        
                                        
                                        
                                    </td>
                                </tr>
                            }
                            </form>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="d-flex justify-content-start">
    
</div>

