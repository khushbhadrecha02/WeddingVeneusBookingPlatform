@using Microsoft.AspNetCore.Http;
@using WeddingVeneus1.Areas.Login.Models;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor accessor
@model LoginViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}
 

    <div class="pagetitle">
      <h1>Profile</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Home</a></li>
          <li class="breadcrumb-item">Users</li>
          <li class="breadcrumb-item active">Profile</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section profile">
      <div class="row">
        <div class="col-xl-4">

          <div class="card">
            <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">


                        @if (Model.updatePhoto.PhotoPath != "")
                        {
                            <img src="@Url.Content(Model.updatePhoto.PhotoPath)" id="ProfilePhoto" alt="Profile" class="rounded-circle ProfilePhoto" >
                        }
                        else
                        {
                        <img src="@Url.Content("~/assets/img/Profile.jpg")" alt="Profile" class="rounded-circle ProfilePhoto">
                        }
                    <h2 class="fullName">@Model.loginModelForDisplay.UserName</h2>
                        <h3>@Model.loginModelForDisplay.RoleName</h3>
              
            </div>
          </div>

        </div>

        <div class="col-xl-8">

          <div class="card">
            <div class="card-body pt-3">
              <!-- Bordered Tabs -->
              <ul class="nav nav-tabs nav-tabs-bordered">

                <li class="nav-item">
                  <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">Overview</button>
                </li>

                <li class="nav-item">
                  <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-edit">Edit Profile</button>
                </li>

                

                <li class="nav-item">
                  <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-change-password">Change Password</button>
                </li>
                        <li class="nav-item">
                            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-change-email">Change Email</button>
                        </li>
              </ul>
              <div class="tab-content pt-2">

                <div class="tab-pane fade show active profile-overview" id="profile-overview">


                  <h5 class="card-title">Profile Details</h5>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label ">Full Name</div>
                    <div class="col-lg-9 col-md-8 fullName">@Model.loginModelForDisplay.UserName</div>
                  </div>

                  

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label">Role</div>
                    <div class="col-lg-9 col-md-8">@Model.loginModelForDisplay.RoleName</div>
                  </div>

                  

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label">Phone</div>
                                <div class="col-lg-9 col-md-8 ContactNO">@Model.loginModelForDisplay.ContactNO</div>
                                
                  </div>

                  <div class="row">
                    <div  class="col-lg-3 col-md-4 label">Email</div>
                    <div id="Email1" class="col-lg-9 col-md-8">@Model.loginModelForDisplay.Email</div>
                  </div>

                </div>

                <div class="tab-pane fade profile-edit pt-3" id="profile-edit">

                  <!-- Profile Edit Form -->
                            <!-- HTML for the container -->
                            <div id="validationErrorContainer" style="width: 100%;"></div>

                    
                    <div class="row mb-3">
                      <label for="profileImage" class="col-md-4 col-lg-3 col-form-label">Profile Image</label>
                      <div class="col-md-8 col-lg-9">
                      @if (Model.updatePhoto.PhotoPath != "")
                      {
                                        <img src="@Url.Content(Model.updatePhoto.PhotoPath)" id="ProfilePhoto" alt="Profile" class="rounded-circle ProfilePhoto">
                      }
                      else
                      {
                                        <img src="@Url.Content("~/assets/img/Profile.jpg")" alt="Profile" class="rounded-circle ProfilePhoto">
                      }
                        <div class="pt-2">
                          <button id="openFileBtn" class="btn btn-primary btn-sm" title="Upload new profile image"><i class="bi bi-upload"></i></button>
                          <button id="deleteUserPhotoBtn" class="btn btn-danger btn-sm" title="Remove my profile image"><i class="bi bi-trash"></i></button>

                           <form id="updatephotoform" enctype="multipart/form-data">
                          <input type="file" id="hiddenFileInput" asp-for="@Model.updatePhoto.File" hidden />
                           </form>
                        </div>
                      </div>
                    </div>

                     <form id="updateUserform">
                    <div class="row mb-3">
                      <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Full Name</label>
                      <div class="col-md-8 col-lg-9">
                        <input  type="text" class="form-control fullName"  asp-for="@Model.loginModelForDisplay.UserName">
                      </div>
                    </div>

                    

                    

                    

                    



                    <div class="row mb-3">
                      <label for="Phone" class="col-md-4 col-lg-3 col-form-label">Phone</label>
                      <div class="col-md-8 col-lg-9">
                                        <input type="text" class="form-control ContactNO" asp-for="@Model.loginModelForDisplay.ContactNO">
                      </div>
                    </div>

                    
                    </form><!-- End Profile Edit Form -->
                    

                    

                    

                    

                    <div class="text-center">
                      <button id="UpdateUserDetail"  class="btn btn-primary">Save Changes</button>
                    </div>
                  

                </div>

                

                <div class="tab-pane fade pt-3" id="profile-change-password">
                  <!-- Change Password Form -->
                            <div id="validationError" style="width: 100%;"></div>

                  <form id="ChangePasswordForm">

                    <div class="row mb-3">
                      <label for="currentPassword" class="col-md-4 col-lg-3 col-form-label">Current Password</label>
                      <div class="col-md-8 col-lg-9">
                          <input type="password" class="form-control" asp-for="@Model.updatePassword.OldPassword">
                      </div>
                    </div>

                    <div class="row mb-3">
                      <label for="newPassword" class="col-md-4 col-lg-3 col-form-label">New Password</label>
                      <div class="col-md-8 col-lg-9">
                        <input  type="password" class="form-control"  asp-for="@Model.updatePassword.NewPassword">
                      </div>
                    </div>

                    <div class="row mb-3">
                      <label for="renewPassword" class="col-md-4 col-lg-3 col-form-label">Re-enter New Password</label>
                      <div class="col-md-8 col-lg-9">
                        <input  type="password" class="form-control"  asp-for="@Model.updatePassword.ReEnterNewPassword">
                      </div>
                    </div>

                    
                  </form><!-- End Change Password Form -->
                            <div class="text-center">
                                <button id="ChangePassword" class="btn btn-primary">Change Password</button>
                            </div>

                </div>
                        <div class="tab-pane fade pt-3" id="profile-change-email">
                            <!-- Change Email Form -->
                            <div id="validation" style="width: 100%;"></div>

                            <form id="ChangeEmailForm">

                                <div class="row mb-3">
                                    <label for="currentPassword" class="col-md-4 col-lg-3 col-form-label">Current Email</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input type="text" id="oldEmail" class="form-control" asp-for="@Model.updateEmail.Email" readonly>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="newPassword" class="col-md-4 col-lg-3 col-form-label">New Email</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input type="text" id="newEmail" class="form-control" asp-for="@Model.updateEmail.UpdatedEmail">
                                    </div>
                                </div>

                                


                            </form><!-- End Change Password Form -->
                            <div class="text-center">
                                <button id="ChangeEmail" class="btn btn-primary">Update Email</button>
                            </div>

                        </div>

              </div><!-- End Bordered Tabs -->

            </div>
          </div>

        </div>
      </div>
    </section>
@section Scripts
{
    
    <script>
        var UpdatePhoto = '@Url.Action("UpdatePhoto", "Login")';
        var DeletePhoto = '@Url.Action("DeletePhoto", "Login")';
        var UpdateUserDetails = '@Url.Action("UpdateUserDetails", "Login")';
        var ChangePassword = '@Url.Action("ChangePassword", "Login")';
        var ChangeEmail = '@Url.Action("ChangeEmail", "Login")';
    </script>
            
}
  

